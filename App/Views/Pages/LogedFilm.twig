                        $('.img').append('<li div class= "col s12 m12 film-detail-card" ><div class="card"><div class="card-image" ><img src="https://image.tmdb.org/t/p/original/' + data['backdrop_path'] + '" class="img-cover" style="max-height:90vh !important"><img src="https://image.tmdb.org/t/p/w200/' + data['poster_path'] + '" class="poster-img"></div><div class="container"><span class="card-title"><br><strong><h5 class="title red-text">' + data['title'] + '</h5></strong></span><div class="content"><div class="col s12 m12 l6 right"><div class="card-content-film"><p> <div class="genres red-text text-lighten-1"><strong>' + data['genres'] + '</strong></div><br><span class="grey-text text-lighten-3">Titulo original - <strong>' + data['original_title'] + '</strong><br><span class="grey-text text-lighten-3">Ano de lançamento - <strong>' + date + '</strong><br>País de origem - <strong>' + data['original_language'] + '</strong><br>Votos coletados - <strong>' + data['vote_count'] + '</strong><br>Nota TMDB - <strong>' + data['vote_average'] + '</strong> | Popularidade - <strong>' + data['popularity'] + '</strong></p><a href="http://meuteste.com.br/save/' + data['id'] + '" class="btn red" style="width: 200px !important">Assistir mais tarde</a><br><br><a href="https://www.youtube.com/watch?v=' + data['videos']['results'][0]['key'] + '" class="btn blue" style="width: 200px !important" target="_blank">Assistir ao trailer</a><br><br><a href="https://app.strem.io/#/detail/movie/' + data['imdb_id'] + '" class="btn purple darken-2" style="width: 200px !important" target="_blank">Assistir no Stremio</a></span></div></div><div class="col s12 m12 l6 left"><div class="card-action-film"><span class="filmDetail grey-text text-lighten-3"><h3>Sinópse</h3><br>' + data['overview'] + '</span></div></div></div></div></div></li>')
                    } else {
                        $('.img').append('<li div class= "col s12 m12 film-detail-card" ><div class="card"><div class="card-image" ><img src="https://image.tmdb.org/t/p/original/' + data['backdrop_path'] + '" class="img-cover" style="max-height:90vh !important"><img src="https://image.tmdb.org/t/p/w200/' + data['poster_path'] + '" class="poster-img"></div><div class="container"><span class="card-title"><br><strong><h5 class="title red-text">' + data['title'] + '</h5></strong></span><div class="content"><div class="col s12 m12 l6 right"><div class="card-content-film"><p> <div class="genres red-text text-lighten-1"><strong>' + data['genres'] + '</strong></div><br><span class="grey-text text-lighten-3">Titulo original - <strong>' + data['original_title'] + '</strong><br><span class="grey-text text-lighten-3">Ano de lançamento - <strong>' + date + '</strong><br>País de origem - <strong>' + data['original_language'] + '</strong><br>Votos coletados - <strong>' + data['vote_count'] + '</strong><br>Nota TMDB - <strong>' + data['vote_average'] + '</strong> | Popularidade - <strong>' + data['popularity'] + '</strong></p><a href="http://meuteste.com.br/save/' + data['id'] + '" class="btn red" style="width: 200px !important">Assistir mais tarde</a><br><br><a href="https://app.strem.io/#/detail/movie/' + data['imdb_id'] + '" class="btn purple darken-2" style="width: 200px !important" target="_blank">Assistir no Stremio</a></span></div></div><div class="col s12 m12 l6 left"><div class="card-action-film"><span class="filmDetail grey-text text-lighten-3"><h3>Sinópse</h3><br>' + data['overview'] + '</span></div></div></div></div></div></li>')
                    }
                }
            },
            error: (data) => {
                console.log('error')
            }
        })
    </script>